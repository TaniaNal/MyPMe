<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:weightSum="4">

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="288dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/logo_rhomb" />

    <!-- <TextView
         android:id="@+id/status"
         style="@style/ThemeOverlay.MyTextDetail"
         android:layout_centerHorizontal="true"
         android:text="@string/signed_out" />-->

    <EditText
        android:id="@+id/field_email"
        android:layout_width="235dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/actor"
        android:hint="@string/hint_email"
        android:inputType="textEmailAddress" />

    <Button
        android:id="@+id/email_sign_in_button"
        android:layout_width="134dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="77dp"
        android:background="@drawable/round_corners_blue"
        android:fontFamily="@font/delius"
        android:text="@string/sign_in"
        android:textColor="#ffffff"
        android:textSize="27sp" />

    <Button
        android:id="@+id/email_create_account_button"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="38dp"
        android:background="@drawable/round_corners_white"
        android:fontFamily="@font/delius"
        android:text="@string/sign_up"
        android:textColor="#26c6da"
        android:textSize="17sp" />


    <EditText
        android:id="@+id/field_password"
        android:layout_width="234dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/email_sign_in_button"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/actor"
        android:hint="@string/hint_password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/skip_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="14dp"
        android:layout_marginEnd="14dp"
        android:background="#ffffff"
        android:fontFamily="@font/delius"
        android:text="@string/skip"
        android:textAllCaps="false"
        android:textColor="#78909c"
        android:textSize="20sp" />

</RelativeLayout>
